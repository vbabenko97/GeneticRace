<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="geneticrace.controller.MainMenuController">
    
    <VBox alignment="CENTER" spacing="20.0" 
          AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="100.0" 
          AnchorPane.rightAnchor="100.0" AnchorPane.bottomAnchor="50.0">
        
        <Label fx:id="welcomeLabel" text="Ласкаво просимо!" 
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        
        <Label fx:id="userLabel" text="" style="-fx-font-size: 14px;"/>
        
        <Button fx:id="selectPatientBtn" prefHeight="40.0" prefWidth="250.0"
                text="Вибрати пацієнта" onAction="#handleSelectPatient"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;">
            <font><Font name="Arial" size="14.0"/></font>
        </Button>
        
        <Button fx:id="firstStageBtn" prefHeight="40.0" prefWidth="250.0"
                text="Перший етап лікування" onAction="#handleFirstStage"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
            <font><Font name="Arial" size="14.0"/></font>
        </Button>
        
        <Button fx:id="secondStageBtn" prefHeight="40.0" prefWidth="250.0"
                text="Другий етап лікування" onAction="#handleSecondStage"
                style="-fx-background-color: #FF9800; -fx-text-fill: white;">
            <font><Font name="Arial" size="14.0"/></font>
        </Button>
        
        <Button fx:id="logoutBtn" prefHeight="35.0" prefWidth="150.0"
                text="Вийти" onAction="#handleLogout"
                style="-fx-background-color: #f44336; -fx-text-fill: white;">
            <font><Font name="Arial" size="12.0"/></font>
        </Button>
        
        <padding>
            <Insets top="20.0" bottom="20.0"/>
        </padding>
    </VBox>
</AnchorPane>
