<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="280.0" prefWidth="350.0" style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="geneticrace.controller.PasswordResetController">

    <VBox alignment="CENTER" spacing="15.0"
          AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">

        <Label text="Зміна пароля" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <PasswordField fx:id="newPasswordField" prefHeight="35.0" prefWidth="270.0"
                       promptText="Новий пароль">
            <font><Font name="Arial" size="14.0"/></font>
        </PasswordField>

        <PasswordField fx:id="confirmPasswordField" prefHeight="35.0" prefWidth="270.0"
                       promptText="Підтвердіть пароль">
            <font><Font name="Arial" size="14.0"/></font>
        </PasswordField>

        <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>

        <Button fx:id="resetBtn" text="Змінити пароль" onAction="#handleReset"
                prefHeight="35.0" prefWidth="200.0"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
            <font><Font name="Arial" size="14.0"/></font>
        </Button>

        <padding>
            <Insets top="20.0" bottom="20.0"/>
        </padding>
    </VBox>
</AnchorPane>
